<h1>Passing the <%= @test_passage.test.title %> test</h1>

<p>
  Question <%= @test_passage.current_question_number %> from <%= @test_passage.total_questions_count %>
</p>

<b>
  <%= @test_passage.current_question.body %>
</b>

<%= form_with url: test_passage_path(@test_passage), local: true, method: :put do |form| %>
  <%= form.collection_check_boxes :answer_ids, @test_passage.current_question.answers, :id, :body do |b| %>
    <p>
      <%= b.check_box id: "answer_ids#{b.object.id}" %>
      <%= b.label %>
    </p>
  <% end %>

  <p><%= form.submit 'Next' %></p>
<% end %>
