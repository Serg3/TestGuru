<%= form_with model: [:admin, @badge], local: true do |form| %>
  <%= render 'shared/errors', resource: @badge %>

  <p>
    <%= form.label :title %><br>
    <%= form.text_field :title %>
  </p>

  <p>
    <%= form.label :image %><br>
    <%= form.text_field :image %>
  </p>

  <p>
    <%= form.label :rule %><br>
    <%= form.select :rule, options_for_select([
      ['category_complete'],
      ['first_try'],
      ['level_complete'],
      ]) %>
  </p>

  <p>
    <%= form.label :parameter %><br>
    <%= form.text_field :parameter %>
  </p>

  <p><%= form.submit %></p>
<% end %>
